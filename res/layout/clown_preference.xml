<RelativeLayout
    android:layout_gravity="center_vertical"
    android:orientation="horizontal"
    android:id="@+id/layout_countainer"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android">
    
    <View
        android:id="@+id/divider_right"
        android:background="?android:dividerVertical"
        android:layout_width="2.0px"
        android:layout_height="fill_parent"
        android:minHeight="80.0dip"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true"
        android:layout_marginVertical="8.0dip"/>
        
    <LinearLayout
        android:gravity="start"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingEnd="20.0dip"
        android:layout_marginStart="24.0dip"
        android:layout_alignParentStart="true"
        android:layout_marginVertical="8.0dip">
        
        <ImageView
            android:id="@android:id/icon"
            android:layout_width="24.0dip"
            android:layout_height="24.0dip"/>
            
        <TextView
            android:textSize="14sp"
            android:textAppearance="?android:textAppearanceListItem"
            android:id="@android:id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5.0dip"
            android:textAlignment="viewStart"/>
            
        <TextView
            android:textSize="12sp"
            android:textAppearance="?android:textAppearanceSmall"
            android:textColor="?android:textColorSecondary"
            android:id="@android:id/summary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="9.0dip"
            android:textAlignment="viewStart"/>
            
    </LinearLayout>
    
    <View
        android:id="@+id/divider_bottom"
        android:background="?android:dividerVertical"
        android:layout_width="fill_parent"
        android:layout_height="2.0px"
        android:layout_alignParentBottom="true"
        android:layout_marginHorizontal="16.0dip"/>
        
</RelativeLayout>